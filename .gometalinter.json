{
	"Format": "{{printf `%-11s` .Linter }} | {{.Path}} @{{.Line}}: {{.Message}}",
	"Deadline": "2m",
	"Sort": ["linter", "severity", "path"],

	"Skip": [
		"qb-architect/db/msarchitect/msmodel",
		"qb-architect/db/myarchitect/mymodel",
		"qb-architect/db/pgarchitect/pgmodel"
	],
	"Exclude": [],

	"Linters": {
		"qb": "qb-lint {path}:PATH:LINE:COL:MESSAGE",
		"funlen": "funlen {path}:PATH:LINE:COL:MESSAGE"
	},

	"DisableAll": true,
	"Enable": [
		"deadcode",
		"dupl",
		"errcheck",
		"funlen",
		"goconst",
		"gocyclo",
		"gofmt",
		"golint",
		"ineffassign",
		"interfacer",
		"lll",
		"megacheck",
		"misspell",
		"structcheck",
		"unconvert",
		"unparam",
		"varcheck",
		"vet",
		"vetshadow"
	],

	"Cyclo": 14,
	"LineLength": 150
}
